<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background_image">
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="231dp"
        android:layout_height="64dp"

        android:background="@drawable/custom_button"
        android:hint="Click to take a picture"
        android:textColor="#899597"
        android:textColorHint="#CDC6C0"
        android:textIsSelectable="false"
        android:textSelectHandle="@android:drawable/ic_menu_camera"
        android:textSelectHandleLeft="@android:drawable/ic_menu_camera"
        android:textSize="23sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.709" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="408dp"
        android:layout_height="69dp"
        android:background="#99141414"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:inputType="textPersonName"
        android:padding="16dp"
        android:text="Welcome to Reviewinator"
        android:textColor="#FBE9DB"
        android:textSize="32sp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="129dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="311dp"
        android:layout_height="147dp"
        android:layout_marginTop="20dp"
        android:background="#99141414"
        android:fontFamily="sans-serif-black"
        android:padding="15dp"
        android:text="   Take a photo of          a  book  and get  it's reviews and ratings"
        android:textAllCaps="false"
        android:textColor="#DDC8B7"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

</androidx.constraintlayout.widget.ConstraintLayout>